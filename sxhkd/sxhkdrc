

### POWER MANAGEMENT ###

# Poweroff
super + ctrl + alt + p; p
	systemctl poweroff

# Hibernate
super + ctrl + alt + h; h
	systemctl hibernate

# Suspend
super + ctrl + alt + s
	systemctl suspend

# Lock Computer
super + ctrl + alt + l
	~/.config/lock/i3lock-color.sh

### WM FUNCTIONS ###

# Restart/Quit BSPWM
super + ctrl + alt + {_,shift + }BackSpace
	bspc {wm -r,quit}

# Reload SXHKD
super + ctrl + alt + Return
	pkill -USR1 -x sxhkd

# Toggle Trackpad
super + ctrl + alt + space
	~/.scripts/trackpad-toggle.sh

### APP LAUNCHERS ###

# Rofi
super + alt + @space
	rofi -show run

## xlunch
#super + alt + shift + @space
#	xlunch --config ~/.config/xlunch/launch

# Alacritty
super + alt + Return
	alacritty 

# Firefox
super + alt + f
	firefox

# ViFM
super + alt + v
	alacritty --title=ViFM -e vifm

# Vim
super + alt + shift + v
	alacritty --title=Vim -e vim

# Bluetooth
super + alt + b
	rofi -show bluetooth -modi "bluetooth:.config/rofi/scripts/bluetooth.sh"

# Wifi
super + alt + n
	rofi -show network -modi "network:.config/rofi/scripts/wifi.sh"

# Weather
super + alt + w
	alacritty --hold --title=wttr.in --option font.size=8 -e curl -fs "wttr.in"

# mpd-rofi
super + alt + m
	rofi -show music -modi "music:.config/rofi/scripts/mpd.sh"

# VIMPC
super + alt + shift + m
	alacritty --title=VIMPC -e vimpc

# GLava
# super + alt + shift + m
# 	glava

# Qalculate
super + alt + c
	alacritty -e qalc

